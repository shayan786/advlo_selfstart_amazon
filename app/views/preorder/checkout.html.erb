<div class="gray_background">
  <div class="wrapper clearfix">
    <div class="main_content <%= "payment_options" if Settings.use_payment_options %>">
    <!--
      <p>
        All of your payment information will be secured and stored with Amazon Payments. If you don't have an Amazon account, simply select "I'm a new Customer" on the next page.
        <br />
        <br />
        
        <% if Settings.use_payment_options %>
          Select a payment option and enter your email address below.
        <% else %>
          Enter your email address below.
        <% end %>
        

      </p>
      -->
      <%= form_tag "/preorder/prefill", :id => "checkout" do %>
        <%= render 'preorder/payment_options' %>
        
        <div class="checkout_controls">
          <div class="checkout_controls_wrapper">
            <div class="checkout_controls_inner">
              <%= email_field_tag "email", nil, :placeholder => "Email address", :required => "required", :id => "email" %>
              <%= hidden_field_tag "preorder", true %>
              <%= hidden_field_tag "quantity", params[:quantity] %>
              <%= submit_tag "Checkout", :class => "blue_button disabled", :id => "amazon_button" %>
              <%= image_tag "checkout_icons/amazon_payments.png" %>
              <div class="int_checkbox">
                <%= check_box_tag "international" %>Shipping to Alaska/Hawaii or Outside USA?
              </div>
              <div class="shirt_dropdown">
                Select Shirt Size: 
                <%= select_tag "shirt_size", 
                "<option value='S-green'>Small - Green</option>
                <option value='S-orange'>Small - Burnt Orange</option>
                <option value='S-black'>Small - Black</option>
                <option value='M-green'>Medium - Green</option>
                <option value='M-orange'>Medium - Burnt Orange</option>
                <option value='M-black'>Medium - Black</option>
                <option value='L-green'>Large - Green</option>
                <option value='L-orange'>Large - Burnt Orange</option>
                <option value='L-black'>Large - Black</option>
                <option value='XL-green'>X-Large - Green</option>                
                <option value='XL-orange'>X-Large - Burnt Orange</option>                
                <option value='XL-black'>X-Large - Black</option>".html_safe  %>
              </div>

              <script> 
                $(document).ready(function(){
                  $("ol > li").click(function() {
                    if ($("input:radio[name='payment_option']:checked").val() > 2) {
                      $(".shirt_dropdown").show();
                    }
                    else {
                      $(".shirt_dropdown").hide();
                    }
                  });
                }); 
              </script>

            </div>
          </div>
        </div>
      <% end %>
    </div>
  
    <!--
    <%= render 'preorder/checkout/sidebar' %>
    -->
  
  </div>
</div>

<%= render 'preorder/checkout/perk_imgs' %>
<%= render 'preorder/checkout/faqs' %>
